<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

 <View
     android:id="@+id/headerBkg"
     android:layout_width="match_parent"
     android:background="#75B8EF"
     android:layout_height="80dp" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/homeScreenHeader"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@id/headerBkg"
        android:layout_alignParentEnd="true"
        android:textSize="38sp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="10dp" />

    <View
        android:id="@+id/headerBkg_border1"
        android:layout_width="match_parent"
        android:background="#466E8F"
        android:layout_height="15dp"
        android:layout_below="@id/headerBkg"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/headerBkg_border2"
        android:layout_width="match_parent"
        android:background="#E0DCDA"
        android:layout_height="10dp"
        android:layout_below="@id/headerBkg_border1"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/headerBkg_border2"
        android:background="#FFFFFF"/>

    <ImageView
        android:id="@+id/header_logo"
        android:src="@drawable/aloelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/headerBkg_border2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-15dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/addPlantbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBkg_border2"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/header_logo"
        android:layout_marginLeft="42dp"
        android:background="#E0DCDA"
        android:layout_alignEnd="@id/headerText"/>

    <TextView
        android:id="@+id/button_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/addNewPlant"
        android:textColor="#122A3A"
        android:layout_alignBottom="@id/addPlantbtn"
        android:layout_alignTop="@id/addPlantbtn"
        android:layout_alignStart="@id/addPlantbtn"
        android:gravity="center_vertical"
        android:layout_marginLeft="80dp"
        android:layout_alignEnd="@+id/addPlantbtn" />


    <ImageView
        android:id="@+id/addIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addplantbutton"
        android:layout_alignTop="@id/addPlantbtn"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/header_logo"
        android:layout_marginTop="-3dp" />


    <TextView
        android:id="@+id/directions_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/directions"
        android:layout_toStartOf="@id/button_txt"
        android:textColor="#122A3A"
        android:layout_below="@id/addPlantbtn"
        android:layout_alignEnd="@id/headerText"
        android:layout_toEndOf="@+id/addIcon" />


    <View
        android:id="@+id/headerBkg_border3"
        android:layout_width="match_parent"
        android:background="#466E8F"
        android:layout_height="30dp"
        android:layout_below="@id/container2"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/headerBkg_border4"
        android:layout_width="match_parent"
        android:background="#9B6F4E"
        android:layout_height="10dp"
        android:layout_below="@id/headerBkg_border3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/listView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/listViewHeader"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@id/headerBkg_border3"
        android:layout_alignTop="@id/headerBkg_border3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal" />

    <FrameLayout
        android:id="@+id/plantListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/headerBkg_border4"
        android:layout_alignParentStart="true"></FrameLayout>

</RelativeLayout>